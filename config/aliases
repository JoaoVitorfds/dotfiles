alias calcurse='calcurse -D ~/.config/calcurse'
alias='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts"'
alias calcurse='calcurse -D ~/.config/calcurse'
alias xoff='xrandr --output LVDS-1 --off'
alias xon='xrandr --output LVDS-1 --auto --left-of VGA-1'
alias o='xdg-open'

conj(){
    verbo=$1
    conjugue -v FORMATO=l -v CMD="$1"
}

trpt(){
    word=$1
    trans -t pt "$1"
}

tren(){
    word=$1
        trans -s pt -t en "$1"
}


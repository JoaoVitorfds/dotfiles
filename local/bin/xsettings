#!/bin/sh

# desativa a hibernação
xset -dpms
xset s off

# muda o cursor padrao do mouse
xsetroot -cursor_name left_ptr

# ativa o numlock
numlockx

# troca as funções das teclas caps lock e esc entre si
# setxkbmap -option caps:swapescape

# faz com que o caps lock funcione como esc
setxkbmap -option caps:escape

#!/bin/sh

# Get user selection via dmenu from emoji file.
chosen=$(cat ~/docs/est/ling/phrases | dmenu -i -l 30 | sed "s/;.*//")

# Exit if none chosen.
[ -z "$chosen" ] && exit

if [ -n "$1" ]; then
	xdotool type "$chosen"
else
	echo "$chosen"  | tr -d '\n' | xclip -selection clipboard
	notify-send "'$chosen' copied to clipboard." &
fi

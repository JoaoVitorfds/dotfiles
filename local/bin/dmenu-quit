#!/bin/bash

declare options=("logout
reiniciar
desligar
cancel")

choice=$(echo -e "${options[@]}" | dmenu -b -i -p 'Escolha a opção desejada: ')

case "$choice" in
	cancel)
		echo "Program terminated." && exit 1
	;;
	logout)
		pkill dwm || bspc quit
	;;
	reiniciar)
		reboot
	;;
	desligar)
        sudo poweroff
	*)
		exit 1
	;;
esac
